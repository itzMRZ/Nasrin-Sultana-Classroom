<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><%= title %></h2>
      <div>
        <a href="/class" class="btn btn-outline-secondary ms-2">
          <i class="bi bi-arrow-left"></i> Back to Classes
        </a>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h5>Class Details</h5>
            <p><strong>Subject:</strong> <%= typeof classItem !== 'undefined' && classItem && classItem.subject ? classItem.subject : 'N/A' %></p>
            <p><strong>Section:</strong> <%= typeof classItem !== 'undefined' && classItem && classItem.section ? classItem.section : 'N/A' %></p>
            <p><strong>Teacher:</strong> <%= typeof classItem !== 'undefined' && classItem && classItem.createdBy && classItem.createdBy.firstName ?
              classItem.createdBy.firstName + ' ' + (classItem.createdBy.lastName || '') : 'Unknown Teacher' %></p>
          </div>
          <div class="col-md-6">
            <h5>Class Info</h5>
            <div class="alert alert-info">
              <p class="mb-0"><strong>Welcome to your class!</strong></p>
              <p>This is a simple class view.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Class Stream</h5>
        <p class="card-text">
          Welcome to your class stream. Announcements and updates will appear here.
        </p>

        <div class="stream-feed mt-4">
          <div class="alert alert-info">
            <h6 class="alert-heading">Welcome to the class!</h6>
            <p class="mb-0">This is the beginning of your class stream.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
