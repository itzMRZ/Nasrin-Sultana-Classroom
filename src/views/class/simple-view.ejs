<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <!-- Simple header with class name -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><%= title %></h2>
        <div>
          <a href="/class" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Classes
          </a>
        </div>
      </div>

      <!-- Basic class info card -->
      <div class="card mb-4">
        <div class="card-header">
          Class Information
        </div>
        <div class="card-body">
          <p><strong>Subject:</strong> <%= class.subject || 'N/A' %></p>
          <p><strong>Section:</strong> <%= class.section || 'N/A' %></p>
          <% if (class.room) { %>
          <p><strong>Room:</strong> <%= class.room %></p>
          <% } %>
          <p><strong>Teacher:</strong> <%= class.teacherName %></p>
          <p><strong>Students:</strong> <%= class.studentCount %></p>
          <% if (role === 'teacher') { %>
          <div class="alert alert-info">
            <strong>Invite Code:</strong> <%= class.inviteCode %>
            <p class="mb-0"><small>Share this code with students to join the class</small></p>
          </div>
          <% } %>
        </div>
      </div>

      <!-- Class actions -->
      <div class="card">
        <div class="card-header">
          Class Actions
        </div>
        <div class="card-body">
          <div class="d-flex flex-wrap gap-2">
            <a href="/class/<%= class.id %>/stream" class="btn btn-outline-primary">
              <i class="bi bi-chat"></i> Stream
            </a>
            <a href="/assignment/class/<%= class.id %>" class="btn btn-outline-primary">
              <i class="bi bi-clipboard"></i> Assignments
            </a>
            <a href="/class/<%= class.id %>/people" class="btn btn-outline-primary">
              <i class="bi bi-people"></i> People
            </a>
            <% if (role === 'teacher') { %>
            <a href="/assignment/create/<%= class.id %>" class="btn btn-primary">
              <i class="bi bi-plus"></i> Create Assignment
            </a>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Debug information (can be removed in production) -->
      <div class="mt-4">
        <details>
          <summary>Debug Information</summary>
          <pre class="bg-light p-3"><%= rawData %></pre>
        </details>
      </div>
    </div>
  </div>
</div>
